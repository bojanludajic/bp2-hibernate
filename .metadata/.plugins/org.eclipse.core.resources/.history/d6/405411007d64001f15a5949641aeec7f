package gui;

import javax.swing.table.AbstractTableModel;
import java.util.List;
import model.Astan;

public class TableModelVlasnik extends AbstractTableModel {
	
	List<Astan> stanovi;
	private String[] kolone = {"Broj", "Kvadratura", "Sprat"};
	
	public TableModelVlasnik() {
		
	}

	@Override
	public int getRowCount() {
		return stanovi.size();
	}

	@Override
	public int getColumnCount() {
		return kolone.length;
	}

	@Override
	public Object getValueAt(int rowIndex, int columnIndex) {
		Astan cur = stanovi.get(rowIndex);
		switch (columnIndex) {
		case 0:
			return cur.getBrojstana();
		case 1:
			return cur.getKvadratura();
		case 2:
			return cur.getSprat();
		default: 
			return null;
		}
		return null;
	}
	
	@Override
	public String getColumnName(int column) {
		return kolone[column];
	}
	
	
	

}
